      g.addColorStop(0, "#0f172a");
      g.addColorStop(1, "#111827");
      ctx.fillStyle = g; ctx.fillRect(0, 0, W, H);

      drawBricks();
      drawPaddle();
      drawBalls();
      drawHUD();

      rafRef.current = requestAnimationFrame(step);
    };

    rafRef.current = requestAnimationFrame(step);
    return () => cancelAnimationFrame(rafRef.current);
